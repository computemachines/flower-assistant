{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "paths": {
      "*": ["./node_modules/*"]
    }
  },
  "include": ["src/**/*", "types/**/*"],
}
