{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "paths": {
      "@features/*": ["src/features/*"],
      "@core/*": ["src/core/*"],
      "@infra/*": ["src/infra/*"],
      "@shared/*": ["src/shared/*"],
      "@components/*": ["src/components/*"],
      "@contexts/*": ["src/infra/renderer/*"],
      "*": ["./node_modules/*"]
    }
  },
  "include": ["src/**/*", "types/**/*"]
}
